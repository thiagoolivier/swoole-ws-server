{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["message", "image", "document", "notification"]
    },
    "content": {
      "type": "string"
    },
    "sender": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["id", "name"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "messageId": {
          "type": "string"
        },
        "roomId": {
          "type": "string"
        }
      },
      "required": ["messageId", "roomId"]
    }
  },
  "required": ["type", "content", "sender", "timestamp", "metadata"]
}
